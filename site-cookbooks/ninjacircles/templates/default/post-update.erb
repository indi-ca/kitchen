#!/bin/sh
GIT_WORK_TREE=$PWD/..
export GIT_WORK_TREE
echo 'Checking out the current branch'
echo $GIT_WORK_TREE
git checkout -f


export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# Upgrade requirements
cd <%= @application_home + '/' + @target_dir %>
bundle install

rm -rf _site
jekyll build





